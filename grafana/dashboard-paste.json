{
  "title": "Polymarket BTC 15 mins Trading Bot",
  "schemaVersion": 38,
  "timezone": "browser",
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Total Trades",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 3, "h": 3},
      "targets": [{"expr": "trading_total_trades_total", "refId": "A"}]
    },
    {
      "id": 2,
      "title": "Winning Trades",
      "type": "stat",
      "gridPos": {"x": 3, "y": 0, "w": 3, "h": 3},
      "targets": [{"expr": "trading_winning_trades_total", "refId": "A"}]
    },
    {
      "id": 3,
      "title": "Losing Trades",
      "type": "stat",
      "gridPos": {"x": 6, "y": 0, "w": 3, "h": 3},
      "targets": [{"expr": "trading_losing_trades_total", "refId": "A"}]
    },
    {
      "id": 4,
      "title": "Win Rate",
      "type": "gauge",
      "gridPos": {"x": 9, "y": 0, "w": 3, "h": 3},
      "targets": [{"expr": "trading_winning_trades_total / trading_total_trades_total * 100", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {"mode": "absolute", "steps": [{"color": "red", "value": null}, {"color": "yellow", "value": 40}, {"color": "green", "value": 60}]}
        }
      }
    },
    {
      "id": 5,
      "title": "Current Capital",
      "type": "stat",
      "gridPos": {"x": 0, "y": 3, "w": 3, "h": 3},
      "targets": [{"expr": "trading_current_capital", "refId": "A"}],
      "fieldConfig": {"defaults": {"unit": "currencyUSD"}}
    },
    {
      "id": 6,
      "title": "P&L",
      "type": "stat",
      "gridPos": {"x": 3, "y": 3, "w": 3, "h": 3},
      "targets": [{"expr": "trading_total_pnl", "refId": "A"}],
      "fieldConfig": {"defaults": {"unit": "currencyUSD"}}
    },
    {
      "id": 7,
      "title": "Avg Trade Duration",
      "type": "stat",
      "gridPos": {"x": 6, "y": 3, "w": 3, "h": 3},
      "targets": [{"expr": "trading_trade_duration_seconds_sum / trading_trade_duration_seconds_count", "refId": "A"}],
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "id": 8,
      "title": "Open Positions",
      "type": "stat",
      "gridPos": {"x": 9, "y": 3, "w": 3, "h": 3},
      "targets": [{"expr": "trading_open_positions", "refId": "A"}]
    },
    {
      "id": 9,
      "title": "Trades Over Time",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 6, "w": 12, "h": 6},
      "targets": [
        {"expr": "rate(trading_total_trades_total[5m])", "legendFormat": "Total Trades/min", "refId": "A"},
        {"expr": "rate(trading_winning_trades_total[5m])", "legendFormat": "Wins/min", "refId": "B"},
        {"expr": "rate(trading_losing_trades_total[5m])", "legendFormat": "Losses/min", "refId": "C"}
      ]
    }
  ]
}
